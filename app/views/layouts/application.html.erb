<!DOCTYPE html>
<html>
<head>
  <title>Bestnid</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= render 'layouts/header' %> 

<div id="cuerpo">
	<% if notice %>
		<div class="alert alert-success container" style="margin-top: 2em;"><%= notice %>
		  	<button type="button" class="close" data-dismiss="alert">
			  <span aria-hidden="true">&times;</span>
			  <span class="sr-only">Cerrar</span>
			</button>
		</div>
	<% end %>
	<% if alert %>
	  	<div class="alert alert-danger container" style="margin-top: 2em;"><%= alert %>
		  	<button type="button" class="close" data-dismiss="alert">
			  <span aria-hidden="true">&times;</span>
			  <span class="sr-only">Cerrar</span>
			</button>
		</div>
	<% end %>

	<%= yield %>
</div>

<footer>
	<center><span class="negrita">
		Desarrollado por  <a href="http://github.com/cloud-9-team/" style="color: red">Cloud 9</a>
	</span></center>
</footer>

</body>
</html>