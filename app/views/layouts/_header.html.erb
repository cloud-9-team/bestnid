<header>
  <div class="navbar navbar-fixed-top" role="navigation" id="header">
    <div class="container">
      <div class="navbar-header" >
          <%= link_to root_path, class: 'navbar-brand' do %>
            <%= image_tag "logo.png", title: "Logo", class: "img-thumbnail" %>
            <span id="titulo">Decidí con el corazón.</span>
          <% end %>
      </div>
      <br>
      <p class="navbar-text pull-right">
    <% if user_signed_in? %>
      <strong><%= current_user.email %></strong>
      <%= link_to 'Editar perfil', edit_user_registration_path, :class => 'navbar-link' %> |
      <%= link_to "Cerrar sesión", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
    <% else %>
      <%= link_to "Registrarse", new_user_registration_path, :class => 'navbar-link'  %> |
      <%= link_to "Ingresar", new_user_session_path, :class => 'navbar-link'  %>
    <% end %>
      </p>
      <div class="collapse navbar-collapse">
      </div><!--/.nav-collapse -->
    </div>
    <div id="navtabs">
      <ul class="nav nav-pills nav-justified" role="tablist">
        <li><%= link_to 'Inicio', root_path, :class => 'navbar-link' %></li>
        <li><%= link_to 'Cómo funciona', paginas_estaticas_como_funciona_path, :class => 'navbar-link' %></li>
        <li><%= link_to 'Acerca de', paginas_estaticas_sobre_nosotros_path, :class => 'navbar-link' %></li>
        <li><%= link_to 'Contacto', contacto_index_path, :class => 'navbar-link'%></li>
      </ul>
    </div>
</header>
