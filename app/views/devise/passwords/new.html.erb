<h2 class="subtitulos">¿Olvidaste tu contraseña?</h2>
<div class="container-fluid">
	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  	<%= devise_error_messages! %>

	<div class="row" style="padding-top:1em">
		<div class="col-xs-3 col-md-3"></div>
		<div class="col-xs-6 col-md-6"><%= f.label :email %></div>
	</div>

	<div class="row">
		<div class="col-xs-3 col-md-3"></div>
		<div class="col-xs-6 col-md-6"><%= f.email_field :email, autofocus: true , class:"form-control" %></div>
	</div>

	<div class="row" style="padding-top:1em">
		<div class="col-xs-3 col-md-3"></div>
		<div class="col-xs-6 col-md-6"><%= f.submit "Enviar instrucciones de reseteo de contraseña" , class:"btn btn-primary" %></div>
	</div>

	<% end %>

	<div class="row" style="padding-top:1em">
		<div class="col-xs-3 col-md-3"></div>
		<div class="col-xs-6 col-md-6"><%= render "devise/shared/links" %></div>
	</div>

</div>