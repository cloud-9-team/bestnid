<h2 class="subtitulos">Registrarse en Bestnid</h2>
  <div class="container-fluid">
  	<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  	<%= devise_error_messages! %>
	<div class="row" style="padding-top:1em">
		<div class="col-xs-3 col-md-3"></div>
		<div class="col-xs-6 col-md-6"><%= f.label "Nombre" %><span class="campo-obligatorio">*</span></div>
	</div>
	<div class="row">
		<div class="col-xs-3 col-md-3"></div>
		<div class="col-xs-6 col-md-6"><%= f.text_field :first_name, autofocus: true , :required => "required", class:"form-control" %></div>
	</div>
	<div class="row">
		<div class="col-xs-3 col-md-3"></div>
		<div class="col-xs-6 col-md-6"><%= f.label "Apellido" %><span class="campo-obligatorio">*</span></div>
	</div>
	<div class="row">
		<div class="col-xs-3 col-md-3"></div>
		<div class="col-xs-6 col-md-6"><%= f.text_field :last_name , :required => "required", class:"form-control" %></div>
	</div>
	<div class="row">
		<div class="col-xs-3 col-md-3"></div>
		<div class="col-xs-6 col-md-6"><%= f.label :email %><span class="campo-obligatorio">*</span></div>
	</div>

	<div class="row">
		<div class="col-xs-3 col-md-3"></div>
		<div class="col-xs-6 col-md-6"><%= f.email_field :email, :required => "required",  class:"form-control" %></div>
	</div>

	<div class="row">
		<div class="col-xs-3 col-md-3"></div>
		<div class="col-xs-6 col-md-6"><%= f.label "Contraseña" %><span class="campo-obligatorio">*</span></div>
	</div>

	<div class="row">
		<div class="col-xs-3 col-md-3"></div>
		<div class="col-xs-6 col-md-6">
			<% if @validatable %>
				<i>(<%= @minimum_password_length %> caracteres como mínimo)</i>
			<% end %>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-3 col-md-3"></div>
		<div class="col-xs-6 col-md-6">
			
	    	<%= f.password_field :password, autocomplete: "off" , :required => "required", class:"form-control" %>
		</div>
	</div>


	<div class="row">
		<div class="col-xs-3 col-md-3"></div>
		<div class="col-xs-6 col-md-6"><%= f.label "Confirmación de contraseña" %><span class="campo-obligatorio">*</span></div>
	</div>

	<div class="row">
		<div class="col-xs-3 col-md-3"></div>
		<div class="col-xs-6 col-md-6">
	    	<%= f.password_field :password_confirmation, autocomplete: "off" , :required => "required", class:"form-control"  %>
		</div>
	</div>
	 
	<div class="row">
		<div class="col-xs-3 col-md-3"></div>
		<div class="col-xs-6 col-md-6"><%= f.label "País" %><span class="campo-obligatorio">*</span></div>
	</div>

	<div class="row">
		<div class="col-xs-3 col-md-3"></div>
		<div class="col-xs-6 col-md-6"><%= f.text_field :country , :required => "required", class:"form-control" %></div>
	</div>

	<div class="row">
		<div class="col-xs-3 col-md-3"></div>
		<div class="col-xs-6 col-md-6"><%= f.label "Provincia" %><span class="campo-obligatorio">*</span></div>
	</div>

	<div class="row">
		<div class="col-xs-3 col-md-3"></div>
		<div class="col-xs-6 col-md-6"><%= f.text_field :province , :required => "required", class:"form-control" %></div>
	</div>

	<div class="row">
		<div class="col-xs-3 col-md-3"></div>
		<div class="col-xs-6 col-md-6"><%= f.label "Ciudad" %><span class="campo-obligatorio">*</span></div>
	</div>

	<div class="row">
		<div class="col-xs-3 col-md-3"></div>
		<div class="col-xs-6 col-md-6"><%= f.text_field :city , :required => "required",  class:"form-control" %></div>
	</div>

	<div class="row">
		<div class="col-xs-3 col-md-3"></div>
		<div class="col-xs-6 col-md-6"><%= f.label "Domicilio" %><span class="campo-obligatorio">*</span></div>
	</div>

	<div class="row">
		<div class="col-xs-3 col-md-3"></div>
		<div class="col-xs-6 col-md-6"><%= f.text_field :domicile , :required => "required",  class:"form-control" %></div>
	</div>

	<div class="row">
		<div class="col-xs-3 col-md-3"></div>
		<div class="col-xs-6 col-md-6"><%= f.label "Tarjeta de crédito" %><span class="campo-obligatorio">*</span></div>
	</div>

	<div class="row">
		<div class="col-xs-3 col-md-3"></div>
		<div class="col-xs-6 col-md-6">
			<div class="row">
				<div class="col-xs-3 col-md-3" onkeypress="return isNumberKey(event)"><%= f.text_field :card_1 , :required => "required",  class:"form-control", maxlength:"4" %></div>
				<div class="col-xs-3 col-md-3" onkeypress="return isNumberKey(event)"><%= f.text_field :card_2 , :required => "required",  class:"form-control", maxlength:"4" %></div>
				<div class="col-xs-3 col-md-3" onkeypress="return isNumberKey(event)"><%= f.text_field :card_3 , :required => "required",  class:"form-control", maxlength:"4" %></div>
				<div class="col-xs-3 col-md-3" onkeypress="return isNumberKey(event)"><%= f.text_field :card_4 , :required => "required",  class:"form-control", maxlength:"4" %></div>
			</div>
		</div>
	</div>

	<div class="row" style="padding-top: 1em">
		<div class="col-xs-3 col-md-3"></div>
		<div class="col-xs-6 col-md-6"><span class="campo-obligatorio">*</span> <span class="error">Campos obligatorios</span></div>
	</div>

	<div class="row" style="padding-top:1em">
		<div class="col-xs-3 col-md-3"></div>
		<div class="col-xs-6 col-md-6"><%= f.submit "Registrarse" , class:"btn btn-primary"%></div>
	</div>

	<% end %>

	<div class="row" style="padding-top:1em;padding-bottom:2em">
		<div class="col-xs-3 col-md-3"></div>
		<div class="col-xs-6 col-md-6"><%= render "devise/shared/links"%></div>
	</div>
</div>