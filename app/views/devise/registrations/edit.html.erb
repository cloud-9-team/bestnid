<h2 class="subtitulos">Editar cuenta</h2>

<div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div>
      <%= f.label "País" %> <%= f.text_field :country , :required => "required", class:"form-control" %>
    </div>

    <div>
      <%= f.label "Provincia" %> <%= f.text_field :province , :required => "required", class:"form-control" %>
    </div>

    <div>
      <%= f.label "Ciudad" %> <%= f.text_field :city , :required => "required",  class:"form-control" %>
    </div>

    <div><%= f.label "Contraseña" %> <i>(dejar en blanco si no deseas cambiarla)</i><br />
      <%= f.password_field :password, autocomplete: "off" , class:"form-control" %></div>

    <div><%= f.label "Confirmación de contraseña" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" , class:"form-control" %></div>

    <div><%= f.label "Contraseña actual" %> <i>(necesitamos tu contraseña actual para confirmar los cambios)</i><br />
      <%= f.password_field :current_password, autocomplete: "off" , :required => "required", class:"form-control" %></div>
    <br>
    <div><%= f.submit "Actualizar" , class:"btn btn-primary" %></div>
  <% end %>
  <br>
  <h4><b>Cerrar cuenta</b></h4>

  <p>¿Seguro? :( <%= button_to "Cerrar cuenta", registration_path(resource_name), data: {confirm: "¿Confirma el cierre de su cuenta?" }, method: :delete , class:"btn btn-danger" %></p>

  <br>

  <%= link_to "Volver", :back , class:"btn btn-primary"%>
</div>