
<div class="wrapper">
	<div class="sidebar hidden-xs">
		<div class="sidebar-header">Criterio de ordenación</div>
		<ul>
			<li><a href="#">Título</a></li>
			<li><a href="#">Fecha de creación</a></li>
			<li><a href="#">Fecha de finalización</a></li>
		</ul>
	</div>

	<div class="container contenido">
		<h1 class="subtitulos">Últimas subastas</h1>
		<div>
			<% if @products.count == 0 %>
				<h4 class = "italica" style="padding-bottom: 20em"> No se encontraron productos. </h4>
			<% end %>
			<% @products.each do |p| %>
				<% if Time.now < (p.created_at + p.totalDays.days) %>
					<div class="col-xs-6 col-md-4"> <!-- 3 columnas en Medium devices y 2 en Extra Small devices -->
						<div class = "panel panel-personal">
							<div class = "panel-heading">
								<h3 class = "panel-title text-ellipsis"><%= link_to p.title, p %></h3>
							</div>
							<div class = "panel-body panel-producto">
								<a class="estructura" href="/products/<%=p.id%>"><img src = <%= p.imageURL %> alt = <%= p.title %> class="img-thumbnail imagenes" width = "150"  ></a>
								<div class="estructura">
									<p><%= p.description.truncate(100) %>
										<% if p.description.length > 100 %>
											<span> <%= link_to "(ver más...)", p %></span>
										<% end %>
									</p>
								</div>
							</div>
							<div class = "panel-footer text-ellipsis">
								<% if Time.now > (p.created_at + p.totalDays.days) %>
									<span class="error">¡Subasta finalizada!</span>
								<% else %>
									<span class="negrita">Finalización:</span>
									<%= timeleft(p.created_at + p.totalDays.days) %>
								<% end %>
							</div>
						</div>			
					</div>
				<% end %>
			<% end %>
		</div>
	</div>
</div>