<h1 class="subtitulos">Historial de ventas y subastas</h1>
<div class="container-fluid">

		<div class="row">
		<div class="col-xs-4 col-md-4"></div>
		<div class="col-xs-4 col-md-4">
			<div class = "panel panel-personal">
				<div class = "panel-heading">
					<center><h3 class = "panel-title negrita"><span style="vertical-align: super;color:red">¿?</span> Ayuda contextual</h3></center>
				</div>
				<div class = "panel-body">
					<center><h5>Presione en la foto de cada producto si desea ver más información y/o eliminar subastas.</h4></center>
				</div>
			</div>
		</div>
	</div>

	<% @products.each do |p| %>
		<div class="col-xs-6 col-md-4">
			<div class = "panel panel-personal">
				<div class = "panel-heading">
					<h3 class = "panel-title"><%= link_to p.title, p %></h3>
				</div>
				<div class = "panel-body panel-producto">
					<a class="estructura" href="/products/<%=p.id%>"><img src = <%= p.imageURL %> alt = <%= p.title %> class="img-thumbnail imagenes" width = "150"  ></a>
					<div class="estructura">
						<p><%= p.description.truncate(100) %>
							<% if p.description.length > 100 %>
								<span> <%= link_to "(ver más...)", p %></span>
							<% end %>
						</p>
					</div>
				</div>
				<div class = "panel-footer text-ellipsis">
					<% if Time.now > (p.ends_at) %>
						<span class="error">¡Subasta finalizada!</span>
					<% else %>
						<span class="negrita">Finalización:</span>
						<%= timeleft(p.ends_at) %>
					<% end %>
				</div>
			</div>
		</div>
	<% end %>
</div>